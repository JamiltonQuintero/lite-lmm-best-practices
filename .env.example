# LiteLLM Gateway Environment Variables

# =============================================================================
# REQUIRED: At least one LLM provider
# =============================================================================

# Google Gemini (Primary - recommended)
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# OPTIONAL: Additional providers for fallbacks
# =============================================================================

# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# =============================================================================
# REDIS (for semantic caching)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# LITELLM SETTINGS
# =============================================================================

# Master key for admin operations
LITELLM_MASTER_KEY=sk-litellm-master-key-change-in-production

# PostgreSQL for usage tracking (optional)
LITELLM_DATABASE_URL=
